<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">
    
    <TextView

        android:textColor="@color/teal_700"
        android:text="Seu IMC é: "
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    
    <TextView


        android:id="@+id/textview_result"
        android:maxLength="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:textSize="38sp"/>
    
    <TextView
        android:id="@+id/textview_classificacao"
        android:textColor="@color/teal_700"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Veja abaixo a tabela:"
        android:layout_marginTop="25dp"
        android:textColor="@color/teal_700"
        android:textSize="16sp" />
    <TextView
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="IMC                                                                           Classificação"
        android:layout_marginTop="35dp"
        android:textColor="@color/teal_700"
        android:textSize="12sp" />

    <TextView
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:text="Menor que 18,5                                Abaixo do peso"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="1dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:text="Entre 18.5 e 24.9                                Peso normal"
        android:layout_marginStart="16dp"
          android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="1dp"
        android:textSize="16sp"
        android:text="Entre 25 e 29.9                                    Sobrepeso"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="1dp"
        android:textSize="16sp"
        android:text="Entre 30.0 e 34.9                             Obesidade grau I"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:text="Entre 30.0 e 34.9                             Obesidade grau II"
        android:textSize="16sp" />

    <TextView
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:text="Entre 30.0 e 34.9                             Obesidade grau III"
        android:textSize="16sp" />


</LinearLayout>